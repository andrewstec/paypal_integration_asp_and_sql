<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyTicket Application&trade;</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="navbar-brand hidden-md hidden-sm hidden-lg" src="~/Content/Images/MyTicket_CompanyLogo_.jpg" width="140" style="margin: -10px -10px" />
                <img class="navbar-brand hidden-xs" src="~/Content/Images/MyTicket_CompanyLogo_.jpg" width="160" style="margin: -15px -15px" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (Request.IsAuthenticated)
                        {
                            <li><a style="padding-top: 20px;" href="~/Home/Index">Home</a></li>
                            <li><a style="padding-top: 20px;" href="~/Home/ViewTransactions">View Transactions</a></li>
                            <li><a style="padding-top: 20px;" href="~/Home/Logout">Logout @Html.Raw(User.Identity.Name)</a></li>
                        }
                        else
                        {
                            <li><a style="padding-top: 20px;" href="~/Home/Index">Home</a></li>
                            <li><a style="padding-top: 20px;" href="~/Home/Register">Register</a></li>
                            <li><a style="padding-top: 20px;" href="~/Home/Login">Login</a></li>
                        }

                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MyTicket Application&trade;</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>